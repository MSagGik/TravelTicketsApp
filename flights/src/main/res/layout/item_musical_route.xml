<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dimen_132"
    android:layout_height="@dimen/dimen_214"
    android:layout_marginHorizontal="@dimen/dimen_34"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/route_cover"
        android:layout_width="@dimen/dimen_132"
        android:layout_height="@dimen/dimen_133"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/route_name"
        android:layout_width="@dimen/dimen_132"
        android:layout_height="wrap_content"
        android:text="@string/name_route"
        android:textSize="@dimen/text_size_16s"
        android:fontFamily="@font/roboto"
        android:textFontWeight="600"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_5"
        android:maxLines="1"
        android:maxWidth="@dimen/dimen_132"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/place_of_arrival"
        android:layout_width="@dimen/dimen_132"
        android:layout_height="wrap_content"
        android:text="@string/place_of_arrival"
        android:textSize="@dimen/text_size_14s"
        android:fontFamily="@font/roboto"
        android:textFontWeight="400"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen_5"
        android:maxLines="1"
        android:maxWidth="@dimen/dimen_132"
        android:ellipsize="end" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_5">

        <ImageView
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_fly"
            android:layout_gravity="start|center_vertical"/>

        <TextView
            android:id="@+id/flight_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/flight_cost"
            android:textSize="@dimen/text_size_14s"
            android:fontFamily="@font/roboto"
            android:textFontWeight="400"
            android:textColor="@color/white"
            android:maxLines="1"
            android:maxWidth="@dimen/dimen_108"
            android:ellipsize="end"
            android:layout_marginStart="@dimen/dimen_24"
            android:layout_gravity="start|center_vertical"/>

    </FrameLayout>

</LinearLayout>