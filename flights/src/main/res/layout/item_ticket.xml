<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:background="@null"
    android:layout_marginBottom="@dimen/dimen_24" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="@color/grey_1" >

        <TextView
            android:id="@+id/price"
            style="@style/TextHeaderOne"
            android:layout_marginTop="21dp"
            android:layout_marginStart="@dimen/dimen_16"
            android:layout_gravity="start"
            android:background="@null"
            android:text="@string/price"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_20s" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_70"
            android:layout_marginStart="@dimen/dimen_16"
            android:background="@null"
            android:src="@drawable/ic_red_circle" />

        <FrameLayout
            android:layout_marginTop="63dp"
            android:layout_marginStart="47dp"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@null" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:background="@null"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_start"
                    style="@style/BaseTextViewTicketOneStyleItem"
                    android:text="@string/_00_00" />

                <TextView
                    style="@style/BaseTextViewTicketOneStyle"
                    android:layout_width="14dp"
                    android:text="@string/non_breaking_space" />

                <TextView
                    android:id="@+id/time_finish"
                    style="@style/BaseTextViewTicketOneStyleItem"
                    android:text="@string/_00_00" />

            </LinearLayout>

            <TextView
                android:id="@+id/airport_start"
                style="@style/BaseTextViewTicketOneStyle"
                android:layout_width="38dp"
                android:layout_gravity="start|bottom"
                android:text="@string/loc"
                android:textColor="@color/grey_6"/>

            <TextView
                android:id="@+id/airport_finish"
                style="@style/BaseTextViewTicketOneStyle"
                android:layout_width="38dp"
                android:layout_gravity="end|bottom"
                android:text="@string/loc"
                android:textColor="@color/grey_6" />

        </FrameLayout>

        <TextView
            android:id="@+id/information_track"
            style="@style/BaseTextViewTicketOneStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_16"
            android:layout_marginStart="153dp"
            android:layout_marginTop="63dp"
            android:text="@string/information_track" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_blue"
        android:paddingHorizontal="@dimen/dimen_16"
        android:visibility="visible">

        <TextView
            android:id="@+id/badge"
            style="@style/TextViewTableOneStyle"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="start|center_vertical"
            android:text="@string/price_chart" />

    </FrameLayout>

</FrameLayout>